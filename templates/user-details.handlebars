<div id="user-details" class="row">

  <div class="form-group col-md-12 "> 
    <h2>{{name}}'s Profile</h2>
  </div>

  <div class="form-group col-md-6">
    <label for="firstname">Name</label>
    <input type="text" class="form-control" id="firstname" placeholder="John" value="{{name}}">
  </div>
  <div class="form-group col-md-6">
    <label for="lastname">Last name</label>
    <input type="text" class="form-control" id="lastname" placeholder="Appleseed" value="{{lastname}}">
  </div>

  <div class="form-group col-md-6">
    <label for="phonenumber">Phone</label>
    <input type="tel" class="form-control" id="phonenumber" placeholder="Phone" value="{{phone}}">
  </div>

  <div class="form-group col-md-6">
    <label for="emailaddress">Email address</label>
    <input type="email" class="form-control" id="emailaddress" placeholder="Email" value="{{username}}@ziprealty.com">
  </div>

  <input id="username-hidden" type="hidden" value="{{username}}">


  <div class="form-group col-md-4">
    <label for="exampleInputPassword1">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password" value="fakepass" disabled> 
  </div>
  <div class="form-group col-md-2">
    <label class="white-text">reset password</label>
    <button type="button" class="btn btn-default visible-md-block visible-lg-block">Reset Password</button>
  </div>
  
  <button id="update-details" type="button" class="btn btn-primary btn-block">Update details</button>

</div>